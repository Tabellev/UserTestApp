<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentStyle"
    tools:context="com.example.isabel.usertestapp.MultipleChoiceFragment">

    <ProgressBar
        android:id="@+id/progressbar6"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:max="10"
        android:progress="0"
        android:layout_width="1000dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        style="@style/TextFieldStyle"
        android:text="@string/multiple_choice_question6"
        android:id="@+id/multipleAnswerQuestion6"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="106dp" />

    <Button
        style="@style/ButtonAnswerStyle"
        android:text="@string/jordbær"
        android:id="@+id/btnMultiple6AnsOne"
        android:layout_alignTop="@+id/btnMultiple6AnsTwo"
        android:layout_toStartOf="@+id/btnMultiple6AnsTwo" />

    <Button
        style="@style/ButtonAnswerStyle"
        android:text="@string/bringebær"
        android:id="@+id/btnMultiple6AnsTwo"
        android:layout_alignTop="@+id/btnMultiple6AnsThree"
        android:layout_toStartOf="@+id/btnMultiple6AnsThree" />

    <Button
        style="@style/ButtonAnswerStyle"
        android:text="@string/bjørnebær"
        android:id="@+id/btnMultiple6AnsThree"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/btnMultiple6AnsFour" />

    <Button
        style="@style/ButtonAnswerStyle"
        android:text="@string/blåbær"
        android:id="@+id/btnMultiple6AnsFour"
        android:layout_centerVertical="true"
        android:layout_alignEnd="@+id/multiple6DontKnow" />

    <Button
        style="@style/ButtonDontKnowStyle"
        android:text="@string/answer_dont_know"
        android:id="@+id/multiple6DontKnow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/TextFieldSwipeStyle"
        android:text="@string/swipe_to_continue"
        android:id="@+id/multipleChoice6Continue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
</RelativeLayout>
