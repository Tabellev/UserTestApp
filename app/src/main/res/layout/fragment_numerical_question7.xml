<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/FragmentStyle"
    tools:context="com.example.isabel.usertestapp.NumericalInputFragment">

    <TextView
        style="@style/TextFieldStyle"
        android:text="@string/numerical_question7"
        android:id="@+id/numericalQuestion7"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:id="@+id/inputNumerical7"
        android:layout_marginTop="59dp"
        android:layout_below="@+id/numericalQuestion7"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:textSize="30sp" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/one"
        android:id="@+id/btnOneNumerical7"
        android:layout_below="@+id/inputNumerical7"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="64dp" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/two"
        android:id="@+id/btnTwoNumerical7"
        android:layout_alignTop="@+id/btnOneNumerical7"
        android:layout_toEndOf="@+id/btnOneNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/three"
        android:id="@+id/btnThreeNumerical7"
        android:layout_alignTop="@+id/btnTwoNumerical7"
        android:layout_toEndOf="@+id/btnTwoNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/four"
        android:id="@+id/btnFourNumerical7"
        android:layout_alignTop="@+id/btnThreeNumerical7"
        android:layout_toEndOf="@+id/btnThreeNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/five"
        android:id="@+id/btnFiveNumerical7"
        android:layout_alignTop="@+id/btnFourNumerical7"
        android:layout_toEndOf="@+id/btnFourNumerical7" />

    <ImageButton
        style="@style/ButtonNumberStyle"
        android:id="@+id/backspaceNumerical7"
        android:src="@android:drawable/ic_input_delete"
        android:scaleType="centerCrop"
        android:layout_alignTop="@+id/btnFiveNumerical7"
        android:layout_toEndOf="@+id/btnFiveNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/six"
        android:id="@+id/btnSixNumerical7"
        android:layout_below="@+id/btnOneNumerical7"
        android:layout_alignStart="@+id/btnOneNumerical7"
        android:layout_marginTop="48dp" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/seven"
        android:id="@+id/btnSevenNumerical7"
        android:layout_alignTop="@+id/btnSixNumerical7"
        android:layout_alignStart="@+id/btnTwoNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/eight"
        android:id="@+id/btnEightNumerical7"
        android:layout_alignTop="@+id/btnSevenNumerical7"
        android:layout_alignStart="@+id/btnThreeNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/nine"
        android:id="@+id/btnNineNumerical7"
        android:layout_alignTop="@+id/btnEightNumerical7"
        android:layout_toEndOf="@+id/btnEightNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/zero"
        android:id="@+id/btnZeroNumerical7"
        android:layout_alignTop="@+id/btnNineNumerical7"
        android:layout_alignStart="@+id/btnFiveNumerical7" />

    <Button
        style="@style/ButtonNumberStyle"
        android:text="@string/point"
        android:id="@+id/btnPointNumerical7"
        android:layout_alignTop="@+id/btnZeroNumerical7"
        android:layout_alignStart="@+id/backspaceNumerical7" />

    <Button
        style="@style/ButtonDontKnowStyle"
        android:text="@string/answer_dont_know"
        android:id="@+id/btnNumerical7DontKnow"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <TextView
        style="@style/TextFieldSwipeStyle"
        android:text="@string/swipe_to_continue"
        android:id="@+id/numerical7Continue"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>
